[general]
ui = ttyui
accounts = caleb
pythonfile = ~/.offlineimap.py
maxsyncaccounts = 1

[Account caleb]
localrepository = caleb
remoterepository = alerque-gmail
autorefresh = 5
quick = 10

[Repository caleb]
type = Maildir
localfolders = ~/Mail
; Convert non-breaking spaces to spaces
nametrans = lambda foldername: re.sub (' ', ' ', foldername)

[Repository alerque-gmail]
type = Gmail
remoteuser = alerque
remotepasseval = gpg_pw("offlineimap.gpg")
realdelet = no
; Convert spaces to non-breaking spaces
nametrans = lambda foldername: re.sub (' ', ' ', foldername)
folderfilter = lambda foldername: foldername not in ['[Gmail]/Spam']
maxconnections = 10
keepalive = 60
holdconnectionopen = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(foldername)s"
sep = " "
footer = "\n"
